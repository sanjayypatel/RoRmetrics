.centered-content
  .content-header Forgot your password?
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    = devise_error_messages!
    .form-section
      = f.label :email
      = f.email_field :email, autofocus: true, class: 'enter-text'
    .form-section
      = f.submit "Send me reset password instructions", class: 'submit-form'
  = render "devise/shared/links"
