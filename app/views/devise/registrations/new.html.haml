.centered-content
  .content-header Sign Up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .form-section
      = f.label :email
      = f.email_field :email, autofocus: true, class: 'enter-text'
    .form-section
      = f.label :password
      - if @validatable
        %em
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "off", class: 'enter-text'
    .form-section
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off", class: 'enter-text'
    .form-section
      = f.submit "Sign up", class: 'submit-form'
  = render "devise/shared/links"