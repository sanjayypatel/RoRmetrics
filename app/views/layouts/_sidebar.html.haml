- if user_signed_in?
  .sidebar-header= current_user.name
  .sidebar-text= current_user.email
  = link_to "New Application", new_registered_application_path, class: 'sidebar-link'
  = link_to "My Applications", registered_applications_path, class: 'sidebar-link'
  = link_to "My Settings", edit_user_registration_path(current_user), class: 'sidebar-link'
  = link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'sidebar-link'
.sidebar-spacer
-if registered_application
  .sidebar-header Current Application
  .sidebar-text= registered_application.name
  = link_to "Application settings", edit_registered_application_path(registered_application), class: 'sidebar-link'